<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="DatabaseBlock">
        <item name="android:layout_margin">@dimen/database_block_margin</item>
    </style>

    <style name="DatabaseBlockContent">
        <item name="android:layout_marginLeft">@dimen/database_block_content_margin_left</item>
    </style>

    <style name="DatabaseBlockTitle">
        <item name="android:textSize">@dimen/database_block_title_font_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="DatabaseBlockStatus">
        <item name="android:textSize">@dimen/database_block_status_font_size</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="DatabaseTable">
        <item name="android:layout_marginTop">@dimen/database_table_margin_top</item>
    </style>

    <style name="DatabaseTableCellLabel">
        <item name="android:textSize">@dimen/database_table_cell_font_size</item>
    </style>

    <style name="DatabaseTableCellValue">
        <item name="android:textSize">@dimen/database_table_cell_font_size</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:paddingLeft">@dimen/database_table_cell_padding</item>
    </style>

    <style name="SearchInput">
        <item name="android:padding">@dimen/search_input_padding</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/search_input_font_size</item>
    </style>

    <style name="SearchMessage">
        <item name="android:padding">@dimen/search_message_padding</item>
        <item name="android:textSize">@dimen/search_message_font_size</item>
    </style>

    <style name="SearchEntry">
        <item name="android:padding">@dimen/search_entry_padding</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/search_entry_font_size</item>
    </style>

    <style name="SearchWord">
        <item name="android:padding">@dimen/search_word_padding</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/search_word_font_size</item>
    </style>

</resources>
