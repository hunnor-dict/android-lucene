<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.hunnor.dict.android.activity.database.DatabaseViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.database.DatabaseActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/DatabaseBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    app:srcCompat="@drawable/ic_sd_card_gray_24dp" />

                <LinearLayout
                    style="@style/DatabaseTextBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/database_local_title"
                        style="@style/DatabaseTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/database_local_title" />

                    <TableLayout
                        style="@style/DatabaseTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>

                            <TextView
                                android:id="@+id/database_local_date_label"
                                style="@style/DatabaseTableCellLabel"
                                android:text="@string/database_label_date" />

                            <TextView
                                android:id="@+id/database_local_date"
                                style="@style/DatabaseTableCellValue"
                                android:text="@{viewModel.localDate}" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/database_local_size_label"
                                style="@style/DatabaseTableCellLabel"
                                android:text="@string/database_label_size" />

                            <TextView
                                android:id="@+id/database_local_size"
                                style="@style/DatabaseTableCellValue"
                                android:text="@{viewModel.localSize}" />
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/database_local_status"
                        style="@style/DatabaseStatusLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.localStatus}"
                        android:visibility="@{viewModel.localStatus == null || viewModel.localStatus.isEmpty() ? View.GONE : View.VISIBLE}" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/DatabaseBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    app:srcCompat="@drawable/ic_file_download_gray_24dp" />

                <LinearLayout
                    style="@style/DatabaseTextBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/database_available_update_title"
                        style="@style/DatabaseTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/database_remote_title" />

                    <TableLayout
                        style="@style/DatabaseTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>

                            <TextView
                                android:id="@+id/database_remote_date_label"
                                style="@style/DatabaseTableCellLabel"
                                android:text="@string/database_label_date" />

                            <TextView
                                android:id="@+id/database_remote_date"
                                style="@style/DatabaseTableCellValue"
                                android:text="@{viewModel.remoteDate}" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/database_remote_size_label"
                                style="@style/DatabaseTableCellLabel"
                                android:text="@string/database_label_size" />

                            <TextView
                                android:id="@+id/database_remote_size"
                                style="@style/DatabaseTableCellValue"
                                android:text="@{viewModel.remoteSize}" />
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/database_available_update_status"
                        style="@style/DatabaseStatusLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.remoteStatus}"
                        android:visibility="@{viewModel.remoteStatus == null || viewModel.remoteStatus.isEmpty() ? View.GONE : View.VISIBLE}" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/database_progress_status"
                style="@style/DatabaseProgressReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.progressReport}"
                android:visibility="@{viewModel.progressReport == null || viewModel.progressReport.isEmpty() ? View.GONE : View.VISIBLE}" />

            <Button
                android:id="@+id/database_button_download"
                style="@style/DatabaseBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doDownload"
                android:text="@string/database_action_download" />
        </LinearLayout>
    </ScrollView>
</layout>
